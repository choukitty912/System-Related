#include <iostream>

using namespace std;

int main()
{
    int a = 8;
    int *p;
    p = &a;
    int &b = a;
    cout<<"Hello World"<<endl;
    cout << "a :" <<&a<< " a: value "<<a<<endl;
    cout <<"*p : "<<*p<<" p: " <<p<< " p address:"<< &p<<endl;
    cout <<"b: " <<(&b)<< " b: value "<<b<<endl;

    return 0;
}

/*
Hello World                                                                                                                                                                         
a :0x7ffeabb2239c a: value 8                                                                                                                                                        
*p : 8 p: 0x7ffeabb2239c p address:0x7ffeabb223a0                                                                                                                                   
b: 0x7ffeabb2239c b: value 8   
*/
